@using BlogProject.ViewModels.Request
@model LoginViewModel

@{
    ViewData["Title"] = "Главная";
    Layout = "_Layout";
}

@if (!Context.User.Identity.IsAuthenticated)
{
    <div class="col-md-10 col-md-offset-1 m-5-auto-5-auto text-center">
        <div class="d-flex">
            <div class="bg-gray w-55 p-10-auto-10-auto authorize-form">
                <form class="authorize" method="get" asp-controller="Authenticate" asp-action="Index">
                    <h3 class="mb-5">Авторизация</h3>
                    <p><input class="input form-control-plaintext w-50" placeholder="Email" asp-for="Email"></p>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <p><input class="input form-control-plaintext w-50" placeholder="Пароль" asp-for="Password"></p>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <p><button class="button form-control-plaintext m-auto mt-5 w-50">Войти</button></p>
                    <p class="small mb-0">Вы ещё не зарегестрированы?</p>
                    <p class="small"><a asp-controller="Home" asp-action="Register">Регистрация</a></p>
                </form>
            </div>
            <div class="w-45 d-flex align-items-center authorize-img">
                <div class="margin-5 w-100 height-90 bradius-0-30-30-0 bg-block">
                </div>
            </div>
        </div>
    </div>
}






